{
  "name": "uma-skill-manager",
  "version": "0.1.0",
  "description": "ウマ娘スキル・サポカ管理データ基盤",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "parse": "npx tsx src/index.ts",
    "db:import": "npx tsx src/db/import.ts --force",
    "db:init": "npx tsx -e \"import { initializeDatabase } from './src/db/connection.js'; initializeDatabase(undefined, true); console.log('Database initialized.');\"",
    "test": "npx vitest run",
    "test:watch": "npx vitest",
    "typecheck": "npx tsc --noEmit"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.10.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0"
  }
}
